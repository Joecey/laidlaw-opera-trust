---
import missionImage from '../../assets/Jussi_Silvennoinen.webp'
import investImage from '../../assets/Valtteri_Hirvonen.webp'
import { Image } from 'astro:assets'
import Audience from '../../assets/audience.svg'
import Handshake from '../../assets/handshake.svg'
import Opera from '../../assets/opera.svg'
import UK from '../../assets/uk.svg'

interface GoalItem {
    text: string
    altText: string
    title: string
    imgSrc: ImageMetadata
}

const goals = [
    {
        text: 'Bring opera to new audiences, making it accessible and inclusive',
        altText: 'Laidlaw opera trust - new audiences',
        imgSrc: Audience,
        title: 'New Audiences',
    },

    {
        text: 'Support new and outstanding productions',
        altText: 'Laidlaw opera trust - support productions',
        imgSrc: Handshake,
        title: 'Support',
    },

    {
        text: 'Help opera to become more sustainable â€“ encouraging innovation and collaboration',
        altText: 'Laidlaw opera trust - sustainable opera',
        imgSrc: Opera,
        title: 'Sustain',
    },

    {
        text: 'Sustain and retain British singers in the industry',
        altText: 'Laidlaw opera trust - Retain British singers',
        imgSrc: UK,
        title: 'Retain Talent',
    },
]
---

<div id="Mission" class=`w-full flex flex-col `>
    <h1 class="mt-20 w-full text-center text-6xl uppercase text-laidlawRed">
        Our Purpose
    </h1>
    <div class="mt-10 flex flex-col items-center justify-center lg:flex-row">
        <div
            class="flex w-full flex-col items-center p-2 md:p-0 lg:w-1/3 lg:items-start"
        >
            <h1
                class="relative mt-8 text-left text-4xl text-laidlawGrey lg:mt-0 lg:w-7/12"
            >
                Our Mission
            </h1>
            <p class="w-5/6 text-left text-xl text-laidlawGrey">
                The Laidlaw Opera Trust is committed to fostering the <span
                    class="font-bold text-laidlawRed"
                    >growth and sustainability of opera companies and houses
                    worldwide.</span
                >Through strategic support and partnership, we aim to expand the
                reach and repertoire of these institutions, ensuring that
                audiences everywhere have access to the unparalleled experience
                of live opera. By investing in the future of this cherished art
                form, we not only enrich cultural landscapes but also nurture
                the next generation of opera enthusiasts and artists.
            </p>
        </div>

        <div id="image-container-mission">
            <Image
                alt="Laidlaw Opera Trust Our Mission"
                src={missionImage}
                class="w-auto p-8 md:w-[45rem] lg:p-0"
            />
            <p class="mt-[-2rem] pl-8 text-sm text-gray-600 lg:mt-0 lg:p-0">
                Source: Jussi Silvennoinen
            </p>
        </div>
    </div>

    <div
        class="mb-10 mt-4 flex flex-col-reverse justify-center lg:flex-row lg:gap-10"
    >
        <!-- hiding this image in mobile view for better flow -->

        <div id="goals" class="mt-10 flex w-full flex-col items-center">
            <h1
                class="relative text-center text-4xl text-laidlawGrey lg:w-7/12"
            >
                Our Goals
            </h1>
            <div
                id="goals_container"
                class="flex flex-row flex-wrap justify-center lg:w-11/12"
            >
                <!-- TODO: make this a flex-row that can be wrapped -->
                {
                    goals.map((goal: GoalItem) => {
                        return (
                            <div
                                id={`container-${goal.altText}`}
                                class="mt-4 flex w-1/2 flex-col items-center justify-start lg:w-1/5"
                            >
                                <Image
                                    src={goal.imgSrc}
                                    alt={goal.altText}
                                    width={140}
                                    class="rounded-full bg-laidlawTeal p-4 lg:ml-0"
                                />
                                <h3 class="mt-4 text-center text-xl font-bold  text-laidlawGrey">
                                    {goal.title}
                                </h3>
                                <p class="mt-2 pl-8 pr-8 text-center text-xl text-laidlawGrey  ">
                                    {goal.text}
                                </p>
                            </div>
                        )
                    })
                }
            </div>
        </div>
    </div>

    <div
        id="invest"
        class="mb-20 flex flex-col items-center justify-center lg:flex-row"
    >
        <div
            class="flex w-full flex-col items-center p-2 md:p-0 lg:w-1/3 lg:items-start"
        >
            <h1
                class="relative mt-10 text-center text-4xl text-laidlawGrey lg:mt-0 lg:w-7/12 lg:text-left"
            >
                Our Investment Focus
            </h1>

            <p class="w-5/6 text-left text-xl text-laidlawGrey">
                We are dedicated to supporting opera globally, ensuring the
                preservation of its rich tradition while fostering its evolution
                in diverse cultural contexts. Our commitment extends to <span
                    class="font-bold text-laidlawRed"
                >
                    opera houses, productions, and festivals worldwide</span
                >, as well as prioritising the <span
                    class="font-bold text-laidlawRed"
                    >advancement of British opera singers</span
                > while acknowledging and nurturing global talent. Through strategic
                investments and targeted support, we aim to cultivate a thriving,
                inclusive opera ecosystem that celebrates excellence and innovation
                across local and international stages.
            </p>
        </div>
        <div id="image-container-invest">
            <Image
                alt="Laidlaw Opera Trust Our Mission"
                src={investImage}
                class="w-auto p-8 md:w-[45rem] lg:p-0"
            />
            <p class="mt-[-2rem] pl-8 text-sm text-gray-600 lg:mt-0 lg:p-0">
                Source: Valtteri Hirvonen
            </p>
        </div>
    </div>
</div>

<style>
    h1 {
        /* font-size: 4rem; */
        font-weight: bold;
        line-height: 1;
        /* text-align: center; */
        margin-bottom: 1rem;
    }
    p {
        margin-bottom: 1rem;
    }
</style>
