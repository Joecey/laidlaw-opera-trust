---
import GranteeIcon from '../GranteeIcon'
import SavonlinnaIcon from '../../assets/savonlinna.png'
import Glyndebourne from '../../assets/glyndebourne.jpg'
import ROH from '../../assets/royalOperaHouse-min.png'
const granteesIcons = [
    {
        imageObject: SavonlinnaIcon,
        name: 'Savonlinna Opera Festival',
        altText: 'Savonlinna Opera Festival Icon',
        padding: 'p-0',
    },

    {
        imageObject: Glyndebourne,
        name: 'Glyndebourne',
        altText: 'Glyndebourne Icon',
        padding: 'p-3',
    },

    {
        imageObject: ROH,
        name: 'Royal Opera House',
        altText: 'Royal Opera House Icon',
        padding: 'p-7 lg:p-8',
    },
]
---

<div id="Grantees" class="flex w-full flex-col gap-2 bg-laidlawTeal">
    <h1
        class="mt-8 w-full pl-1 pr-1 text-center text-5xl uppercase text-white lg:mt-14 lg:p-0 lg:text-7xl"
    >
        Our Grantees
    </h1>

    <p class="self-center p-2 text-center text-xl md:w-3/4 lg:w-1/2">
        "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
        veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
        commodo consequat."
    </p>

    <div
        id="grantee icons"
        class="mb-16 flex w-full flex-col flex-wrap gap-10 md:flex-row md:justify-center"
    >
        {
            granteesIcons.map((iconObject) => {
                return (
                    <GranteeIcon
                        imageSrc={iconObject.imageObject.src}
                        alt={iconObject.altText}
                        name={iconObject.name}
                        padding={iconObject.padding}
                    />
                )
            })
        }
    </div>
</div>

<style>
    h1 {
        /* font-size: 4rem; */
        font-weight: bold;
        line-height: 1;
        /* text-align: center; */
        margin-bottom: 1rem;
    }
    p {
        margin-bottom: 1rem;
    }
</style>
